{
   "tool": "mgear",
   "requires": ["maya"],
   "platforms": ["darwin", "linux", "windows"],
   "environment":
   {
      "MGEAR_ROOT": {"strict": True, "common": "@path/@tool/@version"},
      "PYTHONPATH": "${MGEAR_ROOT}/python",
      "MAYA_SCRIPT_PATH": "${MGEAR_ROOT}/scripts",
      "MAYA_PLUG_IN_PATH": "${MGEAR_ROOT}/plug-ins/${MAYA_VERSION}/@platform",
      "MGEAR_SYNOPTIC_PATH": {"strict": True, "common": ""},
      "MGEAR_PYTHON_QT_BINDING": {"strict": True, "common": ""}
   }
}